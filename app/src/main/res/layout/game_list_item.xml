<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gamedetail_number"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtGameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtGameDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/txtGameTypeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gamedetail_type"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtGameType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/txtStartTimeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gamedetail_starttime"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtGameTypeDesc"/>

        <TextView
            android:id="@+id/txtStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtGameType"
            />

    </RelativeLayout>

</LinearLayout>